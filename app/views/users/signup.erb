<% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your password, please fix it:</strong>
    <ul>
      <% @user.errors.full_messages.each do |user| %>
        <li><%= user %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Signup!</h1>
<h2>Sign up below to take advantage of our awesome song wall!</h2>
<p>Please create a username and password below</p>

<form action="/users/signup" method="post">
  <div>
    <label>Username:</label>
    <input type="text" name="user[username]" value="<%= @user && @user.username %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="user[password]">
  </div>
  <div>
    <input type="submit" value="Make me an account NOW!">
  </div>
</form>